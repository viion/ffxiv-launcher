{
  "name": "FFXIV-Launcher",
  "description": "A custom FFXIV launcher",
  "author": "Josh Freeman <josh@viion.co.uk>",
  "version": "0.3.6",
  "license": "MIT",
  "devDependencies": {
    "@symfony/webpack-encore": "^0.27.0",
    "concurrently": "^4.1.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.38.4",
    "electron-packager": "^13.0.1",
    "node-sass": "^4.13.1",
    "sass-loader": "^7.1.0"
  },
  "main": "main.js",
  "build": {
    "appId": "ffxiv.custom.launcher",
    "win": {
      "icon": "build/logo.ico"
    },
    "mac": {
      "category": "gaming"
    }
  },
  "scripts": {
    "watch": "encore dev --watch",
    "electron-dev": "electron . --dev",
    "start": "concurrently -k -c \"green,blue\" \"yarn:watch\" \"yarn:electron-dev\"",
    "prestart-prod": "encore prod",
    "start-prod": "electron . --dev",
    "build-dev": "encore dev",
    "build": "encore prod",
    "prepack": "yarn run build",
    "pack": "electron-builder --dir",
    "predist": "yarn run build",
    "dist": "electron-builder"
  },
  "dependencies": {
    "moment": "^2.22.2",
    "sha1-file": "^1.0.0",
    "uuid": "^3.3.2",
    "webpack-zepto": "^0.0.1"
  }
}
